<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/secretactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giulia.inflatelist.SecretActivity">

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:text="Titolo"
        android:textSize="@dimen/secret_text_name_number"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/textDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:hint="@string/secret_edit_description"
        android:textSize="@dimen/secret_size_name_number"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />


    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="141dp"
        android:text="User"
        android:textSize="@dimen/secret_text_name_number"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="251dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/textUsername"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:hint="@string/secret_edit_name"
        android:textSize="@dimen/secret_size_name_number" />

    <TextView
        android:id="@+id/textCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Code"
        android:textSize="@dimen/secret_text_name_number"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/editCode"
        android:layout_width="251dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/textCode"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:hint="@string/secret_edit_code"
        android:textSize="@dimen/secret_size_name_number" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:text="@string/secret_button_value" />


</RelativeLayout>