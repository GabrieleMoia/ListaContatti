<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/secretactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giulia.inflatelist.SecretActivity">

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/secret_marginTop_name"
        android:text="Nome"
        android:textSize="@dimen/secret_text_name_number" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/secret_marginTop_name"
        android:text="@string/secret_edit_name"
        android:textSize="@dimen/secret_size_name_number" />


    <TextView
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/secret_marginTop_number"
        android:text="Numero"
        android:textSize="@dimen/secret_text_name_number" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/secret_marginTop_number"
        android:text="@string/secret_edit_number"
        android:textSize="@dimen/secret_size_name_number" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/secret_marginTop_password"
        android:text="Password"
        android:textSize="@dimen/secret_text_name_number" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textPassword"
        android:layout_marginEnd="65dp"
        android:text="Password"
        android:textSize="@dimen/secret_size_name_number"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:text="@string/secret_button_value" />


</RelativeLayout>