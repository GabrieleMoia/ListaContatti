<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <stroke android:width="1dip" android:color="#89C839" />
            <gradient android:angle="-90" android:endColor="#89C839" android:startColor="#fff" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="80dp" />
            <stroke android:width="1dip" android:color="#89C839" />
            <gradient android:angle="-90" android:endColor="#89C839" android:startColor="#89C839" />
        </shape>
    </item>
</selector>